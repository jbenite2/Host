generator dbml {
  provider = "prisma-dbml-generator"
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Users {
  id        Int        @id @unique @default(autoincrement())
  email     String     @unique
  phone     String     @unique
  firstName String
  lastName  String
  password  String
  consent   Boolean    @default(false)
  role      Role       @default(USER)
  responses Response[]
}

model Response {
  id       Int    @id @default(autoincrement())
  optionId Int
  usersId  Int
  Users    Users  @relation(fields: [usersId], references: [id])
  option   Option @relation(fields: [optionId], references: [id])
}

model SurveyQuestion {
  id      Int      @id @default(autoincrement())
  prompt  String
  options Option[]
}

model Option {
  id         Int            @id @default(autoincrement())
  text       String
  score      Philosophy
  questionId Int
  question   SurveyQuestion @relation(fields: [questionId], references: [id])
  Response   Response[]
}

enum Role {
  ADMIN
  USER
}

enum Philosophy {
  CARE_ETHICS
  DEONTOLOGY
  UTILITARIANISM
  VIRTUE_ETHICS
}
